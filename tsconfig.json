{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "fake-external-lib": [
        "./src/fake-external-lib/index"
      ],
      "fake-external-component": [
        "./src/fake-external-lib/component"
      ]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
  },
  "include": [
    "src"
  ]
}